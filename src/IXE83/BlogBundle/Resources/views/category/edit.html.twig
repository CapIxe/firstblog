        {{ form_start(edit_form, {'attr':{'class':'blogger'} }) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="Save changes" />
        {{ form_end(edit_form) }}
        <ul>
            <li>
                <a href="{{ path('IXE83BlogBundle_category_index') }}">Back to the list</a>
            </li>
