{% extends 'IXE83BlogBundle::layout.html.twig' %}

{% block body %}
    <h1>Tag edit</h1>

    {{ form_start(edit_form, {'attr':{'class':'blogger'} }) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Save changes" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('tag_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete tag">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
